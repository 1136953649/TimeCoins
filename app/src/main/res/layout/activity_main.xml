<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        app:default_status="expand"
        app:calendar_show_mode="both_month_week_view"
        app:calendar_content_view_id="@+id/recyclerView">

        <com.haibin.calendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:current_month_lunar_text_color="#CFCFCF"
        app:current_month_text_color="#333333"
        app:max_select_range="7"
        app:max_year="2099"
        app:min_select_range="1"
        app:min_year="2004"
        app:month_view="com.example.timecoins.TimeCoinsMonthView"
        app:month_view_scrollable="true"
        app:month_view_show_mode="mode_only_current"
        app:other_month_lunar_text_color="#e1e1e1"
        app:other_month_text_color="#e1e1e1"
        app:scheme_text="假"
        app:scheme_text_color="#333"
        app:scheme_theme_color="#128c4b"
        app:select_mode="range_mode"
        app:selected_lunar_text_color="#CFCFCF"
        app:selected_text_color="#333"
        app:selected_theme_color="#108cd4"
        app:week_background="#fff"
        app:week_start_with="mon"
        app:week_text_color="#111"
        app:week_view="com.example.timecoins.TimeCoinsWeekView"
        app:week_view_scrollable="true"
        app:year_view_day_text_color="#333333"
        app:year_view_day_text_size="9sp"
        app:year_view_month_text_color="#ff0000"
        app:year_view_month_text_size="20sp"
        app:year_view_scheme_color="#f17706"
        app:year_view_scrollable="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_background" />
    </com.haibin.calendarview.CalendarLayout>
    
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="6"
        android:rowCount="6"
        android:padding="8dp"
        
        android:columnWidth="0dp"
        android:rowHeight="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:background="@color/content_background">
        
        <!-- 36个格子布局 -->
        
        <!-- 动态生成36个格子 -->
        <!-- 第一行 -->
        <TextView
            android:id="@+id/cell_0_0"
            style="@style/GridCellStyle"
            android:text="" />
            
        <TextView
            android:id="@+id/cell_0_1"
            style="@style/GridCellStyle"
            android:text="7:00" />
            
        <TextView
            android:id="@+id/cell_0_2"
            style="@style/GridCellStyle"
            android:text="7:30" />
            
        <TextView
            android:id="@+id/cell_0_3"
            style="@style/GridCellStyle"
            android:text="8:00" />
            
        <TextView
            android:id="@+id/cell_0_4"
            style="@style/GridCellStyle"
            android:text="8:30" />
            
        <TextView
            android:id="@+id/cell_0_5"
            style="@style/GridCellStyle"
            android:text="9:00" />
            
        <!-- 第二行 -->
        <TextView
            android:id="@+id/cell_1_0"
            style="@style/GridCellStyle"
            android:text="9:30" />
            
        <TextView
            android:id="@+id/cell_1_1"
            style="@style/GridCellStyle"
            android:text="10:00" />
            
        <TextView
            android:id="@+id/cell_1_2"
            style="@style/GridCellStyle"
            android:text="10:30" />
            
        <TextView
            android:id="@+id/cell_1_3"
            style="@style/GridCellStyle"
            android:text="11:00" />
            
        <TextView
            android:id="@+id/cell_1_4"
            style="@style/GridCellStyle"
            android:text="11:30" />
            
        <TextView
            android:id="@+id/cell_1_5"
            style="@style/GridCellStyle"
            android:text="12:00" />
            
        <!-- 第三行 -->
        <TextView
            android:id="@+id/cell_2_0"
            style="@style/GridCellStyle"
            android:text="12:30" />
            
        <TextView
            android:id="@+id/cell_2_1"
            style="@style/GridCellStyle"
            android:text="13:00" />
            
        <TextView
            android:id="@+id/cell_2_2"
            style="@style/GridCellStyle"
            android:text="13:30" />
            
        <TextView
            android:id="@+id/cell_2_3"
            style="@style/GridCellStyle"
            android:text="14:00" />
            
        <TextView
            android:id="@+id/cell_2_4"
            style="@style/GridCellStyle"
            android:text="14:30" />
            
        <TextView
            android:id="@+id/cell_2_5"
            style="@style/GridCellStyle"
            android:text="15:00" />
            
        <!-- 第四行 -->
